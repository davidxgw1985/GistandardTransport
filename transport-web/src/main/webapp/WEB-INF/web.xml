    <!--add by yujie 2015-12-08  start-->
    <servlet>
        <servlet-name>validateCode</servlet-name>
        <servlet-class>com.gistandard.transport.system.common.controller.ValidateCodeServlet</servlet-class>
        <init-param>
            <param-name>captchaType</param-name>
            <param-value>1</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>validateCode</servlet-name>
        <url-pattern>/validateCode</url-pattern>
    </servlet-mapping>
    <!--dubbo 服务根路径-->
    <servlet>
        <servlet-name>dubbo</servlet-name>
        <servlet-class>
            com.alibaba.dubbo.remoting.http.servlet.DispatcherServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dubbo</servlet-name>
        <url-pattern>/transportWebWs/*</url-pattern>
    </servlet-mapping>
    <!--add by yujie 2015-12-08  end-->
    <servlet>
        <servlet-name>DruidStatView</servlet-name>
        <servlet-class>com.alibaba.druid.support.http.StatViewServlet</servlet-class>
        <init-param>
            <!-- 允许清空统计数据 -->
            <param-name>resetEnable</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <!-- 用户名 -->
            <param-name>loginUsername</param-name>
            <param-value>druid</param-value>
        </init-param>
        <init-param>
            <!-- 密码 -->
            <param-name>loginPassword</param-name>
            <param-value>druid</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>DruidStatView</servlet-name>
        <url-pattern>/druid/*</url-pattern>
    </servlet-mapping>
    <!--session失效时间为30分钟-->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
